@model ColegioGuaxinim.Application.DTO.ProfessorDTO.ProfessorCriarDto
@{
    ViewData["Title"] = "Cadastrar Professor";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h2 class="h5 mb-0 d-flex align-items-center gap-2">
                    <i class="bi bi-person-plus"></i> Cadastrar Professor
                </h2>
            </div>

            <div class="card-body">
                <form asp-action="Criar" method="post">
                    <!-- Summary de validação do modelo -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex.: Ana Silva" autocomplete="name" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> Salvar
                        </button>
                        <a asp-action="Index" asp-controller="Professores" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
